<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserRegistration">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"

    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/baseline_airport_shuttle_black_24"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="REQUEST EMERGENCY"
        android:textAlignment="center"
        android:paddingTop="35dp"
        android:textSize="20sp"
        android:id="@+id/Emergency_TV"

        />

</LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/baseline_account_balance_black_36"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/NEARBY_HOSPITAL_TV"
            android:text="NEARBY HOSPITALS"
            android:textAlignment="center"
            android:paddingTop="35dp"
            android:textSize="20sp"
            />

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/blood_drop"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BLOOD BANK"
            android:textAlignment="center"
            android:id="@+id/BloodBANK_TV"
            android:paddingTop="35dp"
            android:textSize="20sp"
            />

    </LinearLayout>


</LinearLayout>